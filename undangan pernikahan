  </div>  <script>
    function enc(s){return encodeURIComponent(s)}

    function getSettings(){
      return {
        phone: localStorage.getItem('invite_phone')||'',
        name: localStorage.getItem('invite_name')||''
      }
    }
    function saveSettings(){
      const phone = document.getElementById('phone').value.trim();
      const name = document.getElementById('guestName').value.trim();
      localStorage.setItem('invite_phone', phone);
      localStorage.setItem('invite_name', name);
      alert('Tersimpan! Nomor dan nama akan dipakai untuk pesan WhatsApp.');
    }
    (function(){
      const s = getSettings();
      if(s.phone) document.getElementById('phone').value = s.phone;
      if(s.name) document.getElementById('guestName').value = s.name;
    })();

    function openMaps(query){
      const url = 'https://www.google.com/maps/search/?api=1&query='+enc(query);
      window.open(url, '_blank');
    }

    function buildMessage(type){
      const s = getSettings();
      const guest = s.name || '[Nama tamu]';
      let lines = [];
      lines.push('Halo, saya %s ingin konfirmasi kehadiran untuk undangan pernikahan.');
      if(type === 'pemberkatan'){
        lines.push('Acara: Pemberkatan (Vihara Nirmala)');
        lines.push('Tanggal: 07 Desember 2025');
        lines.push('Waktu: 12.00 - selesai');
      } else {
        lines.push('Acara: Resepsi (Pakons Prime Hotel)');
        lines.push('Tanggal: 07 Desember 2025');
        lines.push('Waktu: 18.00 - 20.00');
      }
      lines.push('Nama mempelai: Susanto & Dewi');
      lines.push('Ortu Susanto: Tn. THO BIAW PHIN & Ny. ANG BIE JAN');
      lines.push('Ortu Dewi: Alm. OEN KIM SUN & Almh. SUKARTI');
      lines.push('\nMohon konfirmasi: (Hadir / Tidak Hadir)\nJumlah tamu: ');

      const templ = lines.join('\n');
      const filled = templ.replace('%s', guest);
      return filled;
    }

    function reserve(type){
      const s = getSettings();
      const phone = s.phone;
      const text = buildMessage(type);
      const encoded = enc(text);
      if(phone){
        const wa = 'https://wa.me/'+phone+'?text='+encoded;
        window.open(wa, '_blank');
      } else {
        const wa = 'https://wa.me/?text='+encoded;
        window.open(wa, '_blank');
      }
    }

    function copyInvite(){
      const text = 'Undangan Pernikahan - Susanto & Dewi\n\n' +
        'Pemberkatan: Vihara Nirmala, 07 Desember 2025, 12.00 - selesai\n' +
        'Resepsi: Pakons Prime Hotel, 07 Desember 2025, 18.00 - 20.00\n\n' +
        'Ortu Susanto: Tn. THO BIAW PHIN & Ny. ANG BIE JAN\n' +
        'Ortu Dewi: Alm. OEN KIM SUN & Almh. SUKARTI\n\n' +
        'Mohon konfirmasi kehadiran via WhatsApp.\n';
      navigator.clipboard?.writeText(text).then(()=>{alert('Teks undangan disalin ke clipboard!')}).catch(()=>{prompt('Salin teks undangan berikut:', text)});
    }
  </script></body>
